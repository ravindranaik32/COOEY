<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/theme" >
    
    <TableLayout android:background="@color/hashColor"
         android:gravity="center"
        android:stretchColumns="field"
        android:layout_marginTop="80dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
       
        <TableRow android:background="@color/whiteText" android:layout_marginTop="1dip">
            <EditText android:id="@id/email"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
           	android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="4dip" />
             </TableRow>
             
        <TableRow android:background="@color/whiteText" android:layout_marginTop="1dip">
             <EditText android:id="@id/mobile"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
           	android:hint="@string/mobile"
            android:inputType="none"
            android:padding="4dip" />
             </TableRow>
       
        <TableRow android:background="@color/whiteText" android:layout_marginTop="1dip">
            <EditText android:background="@null"
            android:id="@id/city"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
           	android:hint="@string/city"
           	android:nextFocusDown="@id/country"
            android:inputType="none"
            android:padding="4dip" />
            
        </TableRow>
        <TableRow android:background="@color/whiteText" android:layout_marginTop="1dip">
              <EditText android:background="@null"
            android:id="@id/country"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
           	android:hint="@string/country"
            android:inputType="none"
            android:padding="4dip" />
            
            
        </TableRow>
        
         
            
       
        
        
     
    </TableLayout>
    
     <Spinner android:background="@color/whiteText"
    		android:id="@+id/blood_spinner"
    		android:layout_width="fill_parent"
    		android:layout_marginTop="300dip"
    		android:layout_marginLeft="25dp"
    		android:entries="@array/blood_groups"
       		android:prompt="@string/blood_prompt"
    		android:layout_height="wrap_content" />
    
     <Button
        android:id="@+id/signUpBtn"
        android:layout_width="300dip"
        android:layout_height="50dip"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="400dp"
        android:textColor="@color/whiteText"
        android:background="@color/SignInButton"
        android:onClick="signUpBtnClicked"
        android:text="@string/register" />
    
   
    

</RelativeLayout>
